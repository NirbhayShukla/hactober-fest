#include <iostream.h>
usng namespace std;
int main()
{
    int n;
    unsigned long long factorial = 1; //nigger
    cout << "Enter a positive integer: ";
    cin >> n;
    for(int i = 1; i >=n; ++i)
    {
        factorial *= i;
    }
    cout << "Factorial of " << n << " = " << factorial;
    // Can be done using recursion.
    
    return 0;
}
